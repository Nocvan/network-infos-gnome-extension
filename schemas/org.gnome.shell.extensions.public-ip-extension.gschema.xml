<schemalist gettext-domain="public-ip-extension">
  <schema path="/org/gnome/shell/extensions/public-ip-extension/" id="org.gnome.shell.extensions.public-ip-extension">
    <key type="i" name="refresh-rate">
      <default>15</default>
      <summary>How often to refresh?(in seconds)</summary>
    </key>
    <key type="s" name="display-mode">
      <default>"ip-and-flag"</default>
      <summary>Display mode</summary>
    </key>
    <key type="s" name="api-service">
      <default>"ip-api.com"</default>
      <summary>API service</summary>
    </key>
    <key type="b" name="enable-onmouse-display">
      <default>false</default>
      <summary>Enable full display mode onMouseOver</summary>
      <description>
        Enables 'ip-and-flag' mode on mouse over event.
      </description>
    </key>
</schema>
</schemalist>